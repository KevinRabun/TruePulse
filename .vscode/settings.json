{
  "css.validate": true,
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript",
    "css": "css"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/src/backend/.venv/Scripts/python.exe",
  "python.analysis.typeCheckingMode": "standard",

  // Suppress false positive GitHub Actions workflow warnings
  // These env vars are set dynamically in previous steps via GITHUB_ENV
  "github-actions.workflows.pinned-version": false,

  // Suppress Tailwind arbitrary value suggestions (style preference)
  "tailwindCSS.lint.cssConflict": "warning",

  // Bicep settings
  "bicep.suppressedWarnings": []
}
