# TruePulse Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Frontend API Secret - Must match backend's FRONTEND_API_SECRET
# IMPORTANT: Change this to a secure random value in production!
NEXT_PUBLIC_FRONTEND_API_SECRET=truepulse-frontend-secret-change-in-production

# Cloudflare Turnstile (CAPTCHA) - Get from https://dash.cloudflare.com/turnstile
# For development, use Cloudflare's test keys:
# Site Key: 1x00000000000000000000AA (always passes)
# Site Key: 2x00000000000000000000AB (always fails)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_FRAUD_PREVENTION=true
NEXT_PUBLIC_SHOW_RISK_INDICATORS=false

# Environment
NEXT_PUBLIC_ENVIRONMENT=development
