# Example environment file for TruePulse
# Copy this to .env and fill in your values

# =============================================================================
# Azure Cosmos DB (Document Database)
# For local development, use the Cosmos DB Emulator:
#   - Download: https://aka.ms/cosmosdb-emulator
#   - Connection string uses well-known emulator key (safe for local dev only!)
# For Azure deployment, use AZURE_COSMOS_ENDPOINT with managed identity
# =============================================================================
AZURE_COSMOS_CONNECTION_STRING=AccountEndpoint=https://localhost:8081/;AccountKey=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==
AZURE_COSMOS_DATABASE=truepulse
AZURE_COSMOS_DISABLE_SSL=true

# =============================================================================
# Azure Storage (Tables for votes/tokens, Blobs for assets)
# For local dev, use connection string. In production, uses managed identity.
# =============================================================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_STORAGE_TABLE_ENDPOINT=https://yourstorageaccount.table.core.windows.net/
AZURE_STORAGE_BLOB_ENDPOINT=https://yourstorageaccount.blob.core.windows.net/

# =============================================================================
# Azure OpenAI (for AI-powered poll generation)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# =============================================================================
# Authentication & Security
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_characters_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Secret for hashing votes (privacy-preserving)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
VOTE_HASH_SECRET=your_vote_hash_secret_at_least_32_characters_long

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Optional: Application Insights (Azure monitoring)
# =============================================================================
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# =============================================================================
# Optional: Email Service (for notifications)
# =============================================================================
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=noreply@truepulse.dev

# =============================================================================
# Optional: OAuth Providers
# =============================================================================
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret
